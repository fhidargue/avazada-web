@model Gimnasio_FND.Models.ViewModel.SubscripcionViewModel


<form method="post" asp-action="UpdateSubscripcion" asp-controller="Subscripcion">
    @Html.HiddenFor(m => m.IdSubscripcion)
    <div class="modal fade" id="modal_update" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Crear subscripción</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="usuario_update">ID del Usuario</label>
                        <input required type="text" id="usuario_update" class="form-control editar" asp-for="IdUsuario" name="IdUsuario">
                    </div>
                    <div class="form-group">
                        <label for="inicio_update">Fecha de Creación</label>
                        <input required type="date" id="inicio_update" min="2020-01-01" max="2100-01-01" class="form-control editar" asp-for="FechaCreacion" name="FechaCreacion">
                    </div>
                    <div class="form-group">
                        <label for="fin_update">Fecha de Vencimiento</label>
                        <input required type="date" id="fin_update" min="2020-01-01" max="2100-01-01" class="form-control editar" asp-for="FechaVencimiento" name="FechaVencimiento">
                    </div>
                    <div class="form-group">
                        <label for="pago_update">Método de Pago</label>
                        <input required type="text" id="pago_update" class="form-control editar" asp-for="MetodoPago" name="MetodoPago">
                    </div>
                    <div class="form-group">
                        <label for="monto_update">Monto</label>
                        <input required type="number" id="monto_update" class="form-control editar" asp-for="Monto" name="Monto">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </div>
        </div>
    </div>
</form>