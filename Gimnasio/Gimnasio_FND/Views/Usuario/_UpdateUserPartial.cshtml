@model Gimnasio_FND.Models.ViewModel.UsuarioViewModel

<form method="post" asp-action="UpdateUsuario" asp-controller="Usuario">

    @Html.HiddenFor(r => r.IdUsuario)

    <div class="modal fade" id="modal_update" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Editar cliente</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">

                        <label for="cedula_update">Cédula cliente</label>
                        <input required type="number" id="cedula_update" class="form-control editar" asp-for="Cedula" name="Cedula">


                    </div>

                    <div class="form-group">

                        <label for="cliente_update">Nombre cliente</label>
                        <input required type="text" id="cliente_update" class="form-control editar" asp-for="Nombre" name="Nombre">


                    </div>


                    <div class="form-group">

                        <label for="apellidos_update">Apellidos cliente</label>
                        <input required type="text" id="apellidos_update" class="form-control editar" asp-for="Apellidos" name="Apellidos">


                    </div>


                    <div class="form-group">

                        <label for="email_update">Email</label>
                        <input required type="email" id="email_update" class="form-control editar" asp-for="Email" name="Email">


                    </div>

                    <div class="form-group">

                        <label for="telefono_update">Teléfono</label>
                        <input required type="number" id="telefono_update" class="form-control editar" asp-for="Telefono" name="Telefono">


                    </div>

                    <div class="form-group">

                        <label for="rol_update">Rol</label>
                        <select required id="rol_update" class="form-control editar" asp-for="IdRol" name="IdRol">

                            <option selected value="">-- Seleccionar rol --</option>
                            <option value="1">Administrador</option>
                            <option value="2">Entrenador</option>
                            <option value="3">Cliente</option>

                        </select>


                    </div>


                    <div class="form-group">

                        <label for="sucursal_update">Sucursal</label>
                        <select required id="sucursal_update" class="form-control editar" asp-for="IdSucursal" name="IdSucursal">

                            <option selected value="">-- Seleccionar sucursal --</option>
                            <option value="2">Cartago</option>
                            <option value="3">Tres Ríos</option>


                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </div>
    </div>
</form>