@model IEnumerable<Gimnasio_FND.Models.ViewModel.RutinaViewModel>

@{
    ViewData["Title"] = "Index";
}


<form action="/" method="post">

    <div class="modal fade" id="rutina_create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Nueva Rutina</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">

                        <label for="rutina">Rutina</label>
                        <input type="text" class="form-control" required id="rutina" />

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Crear</button>
                </div>
            </div>
        </div>
    </div>

</form>


<form action="/" method="post">
    <div class="modal fade" id="ejercicio_create" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Nuevo Ejercicio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="ejercicio">Ejercicio</label>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Crear</button>
                </div>
            </div>
        </div>
    </div>
</form>


<div class="p-3">


    <button type="button" class="btn btn-success mb-4" data-toggle="modal" data-target="#rutina_create">
        Crear Rutina
    </button>


    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-header">

                <div class="row align-items-center">

                    <p class="m-0 mr-2">Rutina: @item.Descripcion</p>
                    <p class="m-0">Usuario: @item.IdUsuarioClienteNavigation.Nombre</p>

                    <div class="ml-4">

                        <a href="@Url.ActionLink("EditRutina","Rutina",new { id = item.IdRutina})" class="btn btn-outline-success">
                            Editar Rutina
                        </a>

                    </div>

                </div>

            </div>
            <div class="card-body">

                @foreach (var value in item.RutinaXejercicios)
                {
                    <p class="card-text">@value.IdEjercicioNavigation.Descripcion @value.IdEjercicioNavigation.Equipo @value.IdEjercicioNavigation.Intensidad</p>

                }

            </div>
        </div>
    }

</div>




