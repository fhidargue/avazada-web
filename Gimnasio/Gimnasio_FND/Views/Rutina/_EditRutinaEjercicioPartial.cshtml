@model Gimnasio_FND.Models.ViewModel.RutinaXejercicio


<form method="post" asp-controller="Rutina" asp-action="EditRutinaEjercicio">
    @Html.HiddenFor(r => r.IdEjercicio, new { id = "idEjercicioEdit" })
    @Html.HiddenFor(r => r.IdRutina, new { id = "idRutinaEjercicioEdit" })
    @Html.HiddenFor(r => r.IdRutinaEjercicio)
    <div class="modal fade" id="modal_update_ejercicio" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Editar Ejercicio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="ejercicio">Ejercicio</label>
                        <input type="text" class="form-control editar" id="ejercicioEdit" readonly />
                    </div>
                    <div class="form-group">
                        <label for="repeticiones">Repeticiones</label>
                        <input type="number" class="form-control editar" id="repeticionesEdit" asp-for="Repeticiones" name="Repeticiones" />
                    </div>
                    <div class="form-group">
                        <label for="series">Series</label>
                        <input type="number" class="form-control editar" id="seriesEdit" asp-for="Series" name="Series" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </div>
    </div>
</form>


